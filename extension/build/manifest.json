{
    "version": "0.0.0",
    "name": "react-chrome-extension-example",
    "manifest_version": 2,
    "description": "Example for react-chrome-extension-boilerplate",
    "browser_action": {
        "default_title": "React Chrome Extension Example",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "img/icon-16.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png",
        "129": "img/dummy.png"
    },
    "web_accessible_resources": ["inject.html"],
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["js/inject.bundle.js"]
        }
    ],
    "permissions": [
        "contextMenus",
        "tabs",
        "storage",
        "https://*/*",
        "http://*/*"
    ],
    "content_security_policy": "default-src 'self'; script-src 'self' http://localhost:* https://localhost:* 'unsafe-eval'; connect-src http://localhost:* https://localhost:*; style-src * 'unsafe-inline' 'self' blob:; img-src 'self' data:;"
}
//"content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
